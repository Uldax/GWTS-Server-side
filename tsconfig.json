{
  "compileOnSave": false,
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./compiled"
  ]
}
